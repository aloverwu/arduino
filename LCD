
#include <Wire.h>              // 導入I2C程式庫
#include <LiquidCrystal_I2C.h> // 導入LCD模組

LiquidCrystal_I2C lcd(0x27, 16, 2);
int i = 0;                     //設定變數i 

void setup() {
  // 初始化LCD initialize the lcd
  lcd.init();
  lcd.backlight();
}
void loop() {

  lcd.clear();                 //清除畫面      
  lcd.setCursor(0, 0);         // (colum, row)從第1排的第1個位置開始顯示
  lcd.print("Hello World!");
  lcd.setCursor(0, 1);         // (colum,row)從第2排第1個位置開始顯示
  lcd.print(i);
  delay(1000);                 //停留1秒
  i += 1;                      // 等同於 i = i + 1
}
